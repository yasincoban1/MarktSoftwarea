@model IEnumerable<MarktSoftware.WebUI.Models.UserOrderModel>
@{
    ViewBag.Title = "Durum";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mt-3">Sipariş Bilgileriniz</h2>
            <hr />
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Sipariş Numarası</th>
                        <th>Sipariş Verilen Tarih</th>
                        <th>Toplam Tutar</th>
                        <th>Sipariş Durumu</th>
                        <th width="100px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderNumber</td>
                            <td>@item.OrderDate.ToShortDateString()</td>
                            <td>
                                <i class="fa fa-try" aria-hidden="true"></i>
                                @item.Total
                            </td>
                            <td>@item.OrderState</td>
                            <td>
                                @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


