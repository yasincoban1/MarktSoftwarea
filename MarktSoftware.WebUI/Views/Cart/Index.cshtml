@model MarktSoftware.WebUI.Models.Cart
@{
    ViewBag.Title = "Alışveriş Sepeti";
}
<div class="container pb-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mt-3">Alışveriş Sepeti</h2>


            @if (Model.CartLines.Count > 0)
            {
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Ürünün Resmi</th>
                            <th>Miktar</th>
                            <th>Ürünün Adı</th>
                            <th>Fiyatı</th>
                            <th>Ara Toplam</th>
                            <td>Sepetten Çıkar</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartLines)
                        {
                            <tr>
                                <td>
                                    <img src="/Images/Product/@item.Image" width="50" />
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    @item.Product.Name
                                </td>
                                <td>
                                    @item.Product.Price
                                </td>
                                <td>
                                    @((item.Product.Price * item.Quantity).ToString("c"))
                                </td>
                                <td>
                                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                    {
                                        @Html.Hidden("Id", item.Product.Id)
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                                            Çıkar
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5"></td>
                            <td>
                                @Model.Total().ToString("c")
                            </td>
                        </tr>
                    </tfoot>
                </table>
                <div class="text-center">
                    <a href="/Home/Index" class="btn btn-warning">
                        <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                        Alışverişe Devam Et
                    </a>
                    <a href="/Cart/Checkout" class="btn btn-success">
                        <i class="fa fa-check" aria-hidden="true"></i>
                        Alışverişi Tamamla
                    </a>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    Alışveriş Sepetinizide Ürün Bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>


