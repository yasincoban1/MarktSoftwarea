@model List<MarktSoftware.Entity.Product>
@{
    ViewBag.Title = "Kategoriye Göre Ürün Listeleme";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="page-title-wrap">
                <div class="page-title-inner">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="bread"><a href="/Home">Ana Sayfa</a> &rsaquo; Ürünler</div>
                            <div class="bigtitle">Tüm Ürünler</div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row prdct">
      @foreach (var item in Model)
      {
          <div class="col-md-3">
              <div class="productwrap">
                  <div class="pr-img">
                      <a href="/Product/Details/@item.Id"><img src="/Images/Product/@item.Image" alt="@item.Description" class="img-responsive"></a>
                      <div class="pricetag on-sale"><div class="inner on-sale"><span class="onsale"><span class="oldprice">@item.OldPrice</span>@item.Price</span></div></div>
                  </div>
                  <span class="smalltitle"><a href="/Product/Details/@item.Id">@item.Name</a></span>
                  <span class="smalldesc">Stok Adeti: @item.Stock</span>
              </div>
          </div>
      }
       
       
    </div>
   

    <div class="spacer"></div>
</div>




