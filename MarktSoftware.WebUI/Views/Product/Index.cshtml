@model IEnumerable<MarktSoftware.Entity.Product>

@{ 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Ürünler";
}

<div class="container">


<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>
<div class="row">
<div class="col-md-10 col-md-offset-1">
<p>
    @Bootstrap.LinkButton("/Product/Create", "primary", string.Empty, string.Empty, "plus", " Yeni")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categorys.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LikeCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlternativeImage1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlternativeImage2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlternativeImage3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsHome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsApproved)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFeatured)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCarousel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NewHot)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OldPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categorys.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LikeCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlternativeImage1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlternativeImage2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlternativeImage3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsHome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsApproved)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsFeatured)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsCarousel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NewHot)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OldPrice)
        </td>
        <td width="150">
            <button type="button" class="btn btn-success btn-xs" data-toggle="modal" data-target="#modal_comment" data-note-id="@item.Id">
                <span class="glyphicon glyphicon-comment"></span>
            </button>
            @Bootstrap.LinkButton("/Product/Edit/" + item.Id, "warning", "btn-xs", "Düzenle", "edit", string.Empty)
            @Bootstrap.LinkButton("/Product/Details/" + item.Id, "info", "btn-xs", "Detaylar", "search", string.Empty)
            @Bootstrap.LinkButton("/Product/Delete/" + item.Id, "danger", "btn-xs", "Kaldır", "trash", string.Empty)
        </td>
    </tr>
}

</table>
        </div>
    </div>
</div>
@Bootstrap.ModalPopup(id: "modal_comment", title: "Yorumlar")