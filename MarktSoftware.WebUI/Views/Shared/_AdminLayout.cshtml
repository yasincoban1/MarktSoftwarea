</head>
<body>
    <div class="page-container">
        <div class="left-content">
            <div class="mother-grid-inner">
                <!--header start here-->
                <div class="header-main">
                    <div class="header-left">
                        <div class="logo-name">
                            <a href="/Home/Index">
                                <h1>ShepherdMarkt</h1>
                            </a>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
    <!--slider menu-->
    <div class="sidebar-menu">
        
        <div class="menu">
            <ul id="menu">
                <li id="menu-home">Yönetim Paneli</li>
                <li>
                    <a href="/Category/Index"><i class="fa fa-cogs"></i><span>Kategoriler</span></a>
                </li>
                <li>
                    <a href="/Product/Index"><i class="fa fa-cogs"></i><span>Ürünler</span></a>
                </li>
                <li>
                    <a href="/MarktUser/Index"><i class="fa fa-cogs"></i><span>Üyeler</span></a>
                </li>
                <li>
                    <a href="/Order/Index"><i class="fa fa-cogs"></i><span>Siparişler</span></a>
                </li>

            </ul>
        </div>
    </div>
    <div class="clearfix"> </div>

    <script>
        var toggle = true;

        $(".sidebar-icon").click(function () {
            if (toggle) {
                $(".page-container").addClass("sidebar-collapsed").removeClass("sidebar-collapsed-back");
                $("#menu span").css({ "position": "absolute" });
            } else {
                $(".page-container").removeClass("sidebar-collapsed").addClass("sidebar-collapsed-back");
                setTimeout(function () {
                    $("#menu span").css({ "position": "relative" });
                },
                    400);
            }
            toggle = !toggle;
        });
    </script>
    <!--scrolling js-->
    <script src="~/Content/Admin/js/jquery.nicescroll.js"></script>

    <!--//scrolling js-->
    <script src="~/Content/Admin/js/scripts.js"></script>
    <script src="~/Content/Admin/js/bootstrap.js"></script>
    <!-- mother grid end here-->


</body>
</html> 