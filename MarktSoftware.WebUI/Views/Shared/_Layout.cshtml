@using MarktSoftware.WebUI.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Shopping Theme</title>

    <!-- Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Ubuntu:400,400italic,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    <link href='~/Content/font-awesome/css/font-awesome.css' rel="stylesheet" type="text/css">
    <link href="~/Content/lightbox2-master/src/css/lightbox.css" rel="stylesheet" />
    <!-- Bootstrap -->

    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Main Style -->

    <link href="~/Content/style.css" rel="stylesheet" />
    <!-- owl Style -->

    <link href="~/Content/css/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/css/owl.transitions.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div id="wrapper">
        <div class="header">
            <!--Header -->
            <div class="container">
                <div class="row">
                    <div class="col-xs-6 col-md-4 main-logo">
                        <a href="/Home/Index"><img src="~/Images/Others/logo.png" alt="logo" class="logo img-responsive"></a>
                    </div>
                    <div class="col-md-8">
                        <div class="pushright">
                            <div class="top">
                                @if (CurrentSession.User == null)
                                {
                                    <a href="@Url.Action("Login","Home")" id="reg" class="btn btn-default btn-dark">Giriş Yap</a>
                                    <a href="@Url.Action("Register","Home")" id="reg" class="btn btn-default btn-dark">Kayıt Ol</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Logout","Home")" id="reg" class="btn btn-default btn-dark">Çıkış Yap</a>

                                }
                                <div class="srch-wrap">
                                    <a href="#" id="srch" class="btn btn-default btn-search"><i class="fa fa-search"></i></a>
                                </div>
                                <div class="srchwrap">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <form class="form-horizontal" role="form">
                                                <div class="form-group">
                                                    <label for="search" class="col-sm-2 control-label">Ara</label>
                                                    <div class="col-sm-10">
                                                        <input type="text" class="form-control" id="search">
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="dashed"></div>
        </div><!--Header -->
        <div class="main-nav">
            <!--end main-nav -->
            <div class="navbar navbar-default navbar-static-top">
                <div class="container">
                    <div class="row">
                        <div class="col-md-10">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <div class="navbar-collapse collapse">
                                <ul class="nav navbar-nav">
                                    <li><a href="/Home/Index" class="active">Ana Sayfa</a><div class="curve"></div></li>

                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Menü <b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li><a href="/Home/MostLiked">En Beğenilenler</a></li>
                                            <li><a href="/Product/MyLikedProducts">Benim Beğendiklerim</a></li>
                                            <li><a href="/Home/AllProduct_Grid">Izgara Ürünler</a></li>
                                            <li><a href="/Home/AllProduct_List">Liste Ürünler</a></li>
                                            <li><a href="/Home/CategoryFullWidth">Full Ürünler</a></li>
                                            <li><a href="/Cart/Index">Sepet</a></li>
                                            <li><a href="/Home/ShowProfile">Profilim</a></li>
                                            <li><a href="/Home/About">Hakkımızda</a></li>
                                            <li><a href="/Home/Contact">İletişim</a></li>

                                        </ul>
                                    </li>
                                    <li><a href="/Home/About">Hakkımızda</a></li>
                                    <li><a href="/Home/Contact">İletişim</a></li>
                                    @if (CurrentSession.User != null && CurrentSession.User.IsAdmin == true)
                                    {
                                    <li><a href="/Order/Index">Yönetim Paneli</a></li>
                                    }
                                    
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--end main-nav -->
        @RenderBody()
        <div class="f-widget">
            <!--footer Widget-->
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <!--footer newsletter widget-->
                        <div class="title-widget-bg">
                            <div class="title-widget">Haber Bültenine Üye Ol</div>
                        </div>
                        <div class="newsletter">
                            <p>
                                İndirimli Ürünlerden ve Yeni Çıkan Ürünlerden Haberder olmak için üye olun.
                            </p>
                            <form role="form">
                                <div class="form-group">
                                    <label>E-Posta Adresinizi Girin</label>
                                    <input type="email" class="form-control newstler-input" id="exampleInputEmail1" placeholder="E-Posta Adresiniz">
                                    <button class="btn btn-default btn-red btn-sm">Kayıt Ol</button>
                                </div>
                            </form>
                        </div>
                    </div><!--footer newsletter widget-->
                    <div class="col-md-4">
                        <!--footer contact widget-->
                        <div class="title-widget-bg">
                            <div class="title-widget-cursive">Shepherd Markt</div>
                        </div>
                        <ul class="contact-widget">
                            <li class="fphone">+90 542 531 49 77</li>
                            <li class="fmail lastone">yasincoban601@gmail.com</li>
                        </ul>
                    </div><!--footer contact widget-->
                </div>
                <div class="spacer"></div>
            </div>
        </div><!--footer Widget-->
        <div class="footer">
            <!--footer-->
            <div class="container">
                <div class="row">
                    <div class="col-md-9">
                        <ul class="footermenu">
                            <!--footer nav-->
                            <li><a href="">Ana Sayfa</a></li>
                            <li><a href="">Sepetim</a></li>
                            
                            <li><a href="">İletişim</a></li>
                        </ul><!--footer nav-->
                        <div class="f-credit">&copy;Tüm Hakları Saklıdır. <a href="#">shepherdmarkt.com</a></div>
                        <a href=""><div class="payment visa"></div></a>
                        <a href=""><div class="payment paypal"></div></a>
                        <a href=""><div class="payment mc"></div></a>
                        <a href=""><div class="payment nh"></div></a>
                    </div>
                    <div class="col-md-3">
                        <!--footer Share-->
                        <div class="followon">Bizi Takip Edin</div>
                        <div class="fsoc">
                            
                            <a href="" class="ffacebook">facebook</a>
                            
                            <div class="clearfix"></div>
                        </div>
                        <div class="clearfix"></div>
                    </div><!--footer Share-->
                </div>
            </div>
        </div><!--footer-->
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->

    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/lightbox2-master/src/js/lightbox.js"></script>
    <!-- map -->
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>

    <script src="~/Content/js/jquery.ui.map.js"></script>
    <script src="~/Content/js/demo.js"></script>
    <!-- owl carousel -->

    <script src="~/Content/js/owl.carousel.min.js"></script>
    <!-- rating -->

    <script src="~/Content/js/rate/jquery.raty.js"></script>
    <script src="~/Content/js/labs.js"></script>
    <!-- Add mousewheel plugin (this is optional) -->

    <script src="~/Content/js/product/lib/jquery.mousewheel-3.0.6.pack.js"></script>
    <!-- fancybox -->

    <script src="~/Content/js/product/jquery.fancybox.js"></script>
    <!-- custom js -->

    <script src="~/Content/js/shop.js"></script>
</body>
</html>